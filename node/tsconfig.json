{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    
    "allowJs": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}